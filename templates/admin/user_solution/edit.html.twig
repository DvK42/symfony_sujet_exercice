    <h1 class="text-2xl font-bold mb-6 text-gray-800">Modifier une solution utilisateur</h1>

    <!-- Formulaire de modification -->
    <div class="bg-white p-6 rounded-lg shadow-sm">
        {{ include('admin/user_solution/_form.html.twig', { 'button_label': 'Mettre à jour' }) }}
