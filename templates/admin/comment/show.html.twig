{% extends 'base.html.twig' %}

{% block title %}Détails du commentaire{% endblock %}

{% block body %}
<div class="bg-gray-50 p-6 rounded-lg shadow-lg mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-gray-800">Détails du commentaire</h1>

    <!-- Table des informations -->
    <table class="min-w-full bg-white border border-gray-200 shadow-sm rounded-lg mb-6">
        <tbody>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">ID</th>
                <td class="py-3 px-4 text-gray-700">{{ comment.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Contenu</th>
                <td class="py-3 px-4 text-gray-700">{{ comment.content }}</td>
            </tr>
            <tr>
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Créé le</th>
                <td class="py-3 px-4 text-gray-700">{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Actions -->
    <div class="flex justify-between items-center">
        <a href="{{ path('admin_comment_index') }}" class="text-indigo-600 hover:underline">
            ← Retour à la liste
        </a>
        <div class="flex items-center space-x-4">
            <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700">
                Modifier
            </a>
            {{ include('admin/comment/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
