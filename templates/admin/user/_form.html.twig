{{ form_start(form, { 'attr': {'class': 'space-y-6'} }) }}
    {% for field in form %}
        <div>
            {{ form_label(field, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
            {{ form_widget(field, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' } }) }}
            {{ form_errors(field, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
        </div>
    {% endfor %}

    <button type="submit" class="w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        {{ button_label|default('Enregistrer') }}
    </button>
{{ form_end(form) }}
