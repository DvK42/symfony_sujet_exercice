{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block content %}
<div class="bg-gray-50 p-6 rounded-lg shadow-lg mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-gray-800">Détails de l'utilisateur</h1>

    <!-- Table des informations -->
    <table class="min-w-full bg-white border border-gray-200 shadow-sm rounded-lg mb-6">
        <tbody>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">ID</th>
                <td class="py-3 px-4 text-gray-700">{{ user.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Email</th>
                <td class="py-3 px-4 text-gray-700">{{ user.email }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Rôles</th>
                <td class="py-3 px-4 text-gray-700">{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Mot de passe</th>
                <td class="py-3 px-4 text-gray-700 truncate">{{ user.password }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Prénom</th>
                <td class="py-3 px-4 text-gray-700">{{ user.firstName }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Nom</th>
                <td class="py-3 px-4 text-gray-700">{{ user.lastName }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Niveau d'étude</th>
                <td class="py-3 px-4 text-gray-700">{{ user.studyLevel }}</td>
            </tr>
            <tr>
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Token de réinitialisation</th>
                <td class="py-3 px-4 text-gray-700 truncate">{{ user.resetToken }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Actions -->
    <div class="flex justify-between items-center">
        <a href="{{ path('admin_user_index') }}" class="text-indigo-600 hover:underline">
            ← Retour à la liste
        </a>
        <div class="flex items-center space-x-4">
            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700">
                Modifier
            </a>
            {{ include('admin/user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
