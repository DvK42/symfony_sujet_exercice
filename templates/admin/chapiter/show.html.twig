{% extends 'base.html.twig' %}

{% block title %}Détails du chapitre{% endblock %}

{% block content %}
<div class="bg-gray-50 p-6 rounded-lg shadow-lg mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-gray-800">Détails du chapitre</h1>

    <!-- Table des informations -->
    <table class="min-w-full bg-white border border-gray-200 shadow-sm rounded-lg mb-6">
        <tbody>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">ID</th>
                <td class="py-3 px-4 text-gray-700">{{ chapiter.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Nom</th>
                <td class="py-3 px-4 text-gray-700">{{ chapiter.name }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Slug</th>
                <td class="py-3 px-4 text-gray-700">{{ chapiter.slug }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Matière</th>
                <td class="py-3 px-4 text-gray-700">{{ chapiter.subject.name }}</td>
            </tr>
            <tr>
                <th class="py-3 px-4 text-left text-gray-600 font-semibold">Niveau</th>
                <td class="py-3 px-4 text-gray-700">{{ chapiter.level.name }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Actions -->
    <div class="flex justify-between items-center">
        <a href="{{ path('admin_chapiter_index') }}" class="text-indigo-600 hover:underline">
            ← Retour à la liste
        </a>
        <div class="flex items-center space-x-4">
            <a href="{{ path('admin_chapiter_edit', {'id': chapiter.id}) }}" class="bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700">
                Modifier
            </a>
            {{ include('admin/chapiter/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
