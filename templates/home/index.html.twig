{% extends 'base.html.twig' %}

{% block content %}
<main class="bg-gray-50 min-h-screen">
    <!-- Hero Section -->
    <section class="bg-blue-600 text-white py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-4xl font-bold mb-4">Bienvenue, {{ app.user.firstName }} !</h1>
            <p class="text-lg mb-6">Choisissez une matière ou un niveau pour commencer votre apprentissage.</p>
        </div>
    </section>

    <!-- Matières Section -->
    <section class="container mx-auto py-16 px-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">Matières</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
            {% for subject in menuSubjects|slice(0, 6) %}
            <div class="bg-white shadow-lg rounded-lg p-4 hover:shadow-xl text-center">
                <h3 class="text-lg font-bold text-blue-600 mb-2">{{ subject.name }}</h3>
                <a href="{{ path('app_subject_details', { slug: subject.slug }) }}" 
                   class="inline-block px-4 py-2 bg-blue-600 text-white font-bold rounded hover:bg-blue-700 text-sm">
                    Découvrir
                </a>
            </div>
            {% endfor %}
        </div>
    </section>

    <!-- Niveaux Section -->
    <section class="container mx-auto py-16 px-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">Niveaux</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for level in levels %}
            <div class="bg-white shadow-lg rounded-lg p-6 hover:shadow-xl">
                <h3 class="text-xl font-bold text-green-600 mb-2">{{ level.name }}</h3>
                <p class="text-gray-600 mb-4">Trouvez des exercices adaptés à ce niveau.</p>
                <a href="{{ path('app_level_details', { slug: level.slug }) }}" 
                   class="inline-block px-4 py-2 bg-green-600 text-white font-bold rounded hover:bg-green-700">
                    Explorer
                </a>
            </div>
            {% endfor %}
        </div>
    </section>
</main>
{% endblock %}
