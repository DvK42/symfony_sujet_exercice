{% extends 'base.html.twig' %}

{% block title %}Modifier mon Profil{% endblock %}

{% block content %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Modifier mon Profil</h1>

        {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
        {% for field in form %}
            <div>
                {{ form_label(field, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(field, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' } }) }}
                {{ form_errors(field, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
            </div>
        {% endfor %}
        <div class="flex justify-between items-center mt-6">
            <a href="{{ path('app_profile_index') }}" class="text-indigo-600 hover:underline">
                ‚Üê Retour au profil
            </a>
            <button type="submit" class="bg-green-600 text-white py-3 px-6 rounded-lg shadow hover:bg-green-700">
                Sauvegarder
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
