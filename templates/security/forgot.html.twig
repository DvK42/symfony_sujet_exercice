{% extends 'base.html.twig' %}

{% block content %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Mot de passe oubli√©</h1>
        {{ form_start(forgotPasswordForm, {'attr': {'class': 'space-y-6'}}) }}

            <!-- Champ email -->
            <div>
                {{ form_label(forgotPasswordForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(forgotPasswordForm.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                {{ form_errors(forgotPasswordForm.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>

            <!-- Bouton de soumission -->
            <div>
                <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-medium rounded-md shadow hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    Envoyer
                </button>
            </div>

        {{ form_end(forgotPasswordForm) }}
    </div>
</div>

{% endblock %}