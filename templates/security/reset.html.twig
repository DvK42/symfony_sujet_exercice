{% extends 'base.html.twig' %}

{% block content %}
<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full">
        <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Réinitialiser le mot de passe</h1>
        
        {{ form_start(resetPasswordForm, {'attr': {'class': 'space-y-6'}}) }}
            
            <div>
                {{ form_label(resetPasswordForm.password.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(resetPasswordForm.password.first, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                {{ form_errors(resetPasswordForm.password.first, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>

            <!-- Champ confirmation mot de passe -->
            <div>
                {{ form_label(resetPasswordForm.password.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(resetPasswordForm.password.second, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                {{ form_errors(resetPasswordForm.password.second, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>

            <!-- Bouton de soumission -->
            <div>
                <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md shadow hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    Réinitialiser
                </button>
            </div>
        {{ form_end(resetPasswordForm) }}
    </div>
</div>
{% endblock %}
