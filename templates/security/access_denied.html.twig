{% extends 'base.html.twig' %}

{% block content %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white shadow-lg rounded-lg p-8 text-center">
        <h1 class="text-2xl font-bold text-red-600 mb-4">Accès Refusé</h1>
        <p class="text-gray-700 mb-6">{{ message }}</p>
        <a href="{{ path('app_home') }}" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
            Retour à l'accueil
        </a>
    </div>
</div>
<script>
    // Détecte lorsque l'utilisateur quitte la page
    window.addEventListener("beforeunload", function () {
        // Redirige vers la route de déconnexion
        navigator.sendBeacon("{{ path('app_logout') }}");
    });
</script>
{% endblock %}
