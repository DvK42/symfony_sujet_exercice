{% extends 'base.html.twig' %}

{% block content %}
<main class="bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <section class="bg-green-600 text-white py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-4xl font-bold mb-4">{{ level.name }}</h1>
            <p class="text-lg">Choisissez une matière pour explorer les chapitres et exercices disponibles pour ce niveau.</p>
        </div>
    </section>

    <!-- Matières Section -->
    <section class="container mx-auto py-16 px-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">Matières disponibles</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for subject in subjects %}
            <div class="bg-white shadow-lg rounded-lg p-6 hover:shadow-xl text-center">
                <h3 class="text-xl font-bold text-blue-600 mb-2">{{ subject.name }}</h3>
                <a href="{{ path('app_chapiter_list', { subject: subject.slug, level: level.slug }) }}" 
                   class="inline-block px-4 py-2 bg-blue-600 text-white font-bold rounded hover:bg-blue-700">
                    Explorer
                </a>
            </div>
            {% endfor %}
        </div>
    </section>
</main>
{% endblock %}
